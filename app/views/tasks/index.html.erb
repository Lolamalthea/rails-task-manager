<h1>Welcome to your task manager</h1>
<h2>Here are your tasks:</h2>

<% @tasks.each do |task| %>
  <h3><%= link_to task.name, task_path(task) %></h3>
  <p><%= link_to "Edit the task", edit_task_path(task) %> | <%= link_to "Delete the task", task_path(task), method: :delete,
      data: { confirm: "Are you sure?" } %> </p>
<% end %>

<%= link_to "Create a new task", new_task_path %>
